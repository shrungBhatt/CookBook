<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/black"
    android:padding="4dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="4dp"
        android:background="@android:color/transparent"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView
            app:cardBackgroundColor="@color/light_gray"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="2dp"
            android:layout_weight="1"
            android:elevation="6dp">

            <FrameLayout
                android:id="@+id/all_recipes_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/homescreen_background"
                android:layout_gravity="center">

                <ImageView
                    android:layout_margin="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/recipe5"
                    android:scaleType="fitXY"
                    android:background="@android:color/black" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:paddingLeft="8dp"
                    android:background="@drawable/textview_background"
                    android:layout_gravity="bottom"
                    android:gravity="center_vertical"
                    android:text="@string/all_recipes"
                    android:textStyle="bold"
                    android:textColor="@color/text_color" />


            </FrameLayout>


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            app:cardBackgroundColor="@color/light_gray"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="4dp"
            android:layout_marginBottom="2dp"
            android:layout_weight="1"
            android:elevation="6dp">

            <FrameLayout
                android:id="@+id/cuisines_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/homescreen_background"
                android:layout_gravity="center">

                <ImageView
                    android:layout_margin="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/recipe7"
                    android:scaleType="fitXY"
                    android:background="@android:color/black" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:paddingLeft="8dp"
                    android:background="@drawable/textview_background"
                    android:layout_gravity="bottom"
                    android:gravity="center_vertical"
                    android:text="@string/cuisines"
                    android:textStyle="bold"
                    android:textColor="@color/text_color" />

            </FrameLayout>


        </android.support.v7.widget.CardView>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="4dp"
        android:background="@android:color/transparent"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView
            app:cardBackgroundColor="@color/light_gray"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="4dp"
            android:layout_marginTop="2dp"
            android:layout_weight="1"
            android:elevation="6dp">

            <FrameLayout
                android:id="@+id/categories_button"
                android:layout_width="match_parent"
                android:background="@drawable/homescreen_background"
                android:layout_height="match_parent"
                android:layout_gravity="center">

                <ImageView
                    android:layout_margin="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/recipe10"
                    android:scaleType="fitXY"
                    android:background="@android:color/black" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:paddingLeft="8dp"
                    android:background="@drawable/textview_background"
                    android:layout_gravity="bottom"
                    android:gravity="center_vertical"
                    android:text="@string/categories"
                    android:textStyle="bold"
                    android:textColor="@color/text_color" />

            </FrameLayout>


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            app:cardBackgroundColor="@color/light_gray"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="2dp"
            android:layout_weight="1"
            android:elevation="6dp">

            <FrameLayout
                android:id="@+id/favourite_recipes_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/homescreen_background"
                android:layout_gravity="center">

                <ImageView
                    android:layout_margin="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/recipe18"
                    android:scaleType="fitXY"
                    android:background="@android:color/black" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:paddingLeft="8dp"
                    android:background="@drawable/textview_background"
                    android:layout_gravity="bottom"
                    android:gravity="center_vertical"
                    android:text="@string/favourite_recipes"
                    android:textStyle="bold"
                    android:textColor="@color/text_color" />



            </FrameLayout>


        </android.support.v7.widget.CardView>


    </LinearLayout>


</LinearLayout>
